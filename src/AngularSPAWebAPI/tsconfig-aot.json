{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  // We must include lazy-loaded modules here in order to force them to be lodaded
  "files": [
    "app/app.module.ts",
    "app/home/home.module.ts",
    "app/account/account.module.ts",
    "app/resources/resources.module.ts",
    "app/dashboard/dashboard.module.ts",
    "app/main-aot.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}